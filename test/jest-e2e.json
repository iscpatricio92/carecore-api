{
  "preset": "ts-jest",
  "displayName": {
    "name": "E2E TESTS",
    "color": "purple"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "commonjs",
          "target": "ES2021",
          "sourceMap": true,
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@/common/(.*)$": "<rootDir>/src/common/$1",
    "^@/config/(.*)$": "<rootDir>/src/config/$1",
    "^@/modules/(.*)$": "<rootDir>/src/modules/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/src"],
  "transformIgnorePatterns": ["node_modules/(?!(uuid|@nestjs-pino|@keycloak)/)"],
  "testTimeout": 30000,
  "verbose": true,
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/modules/**/*.controller.ts",
    "src/modules/**/*.service.ts",
    "src/modules/**/*.guard.ts",
    "src/modules/**/*.strategy.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/**/config/**",
    "!src/**/main.ts",
    "!src/**/migrations/**",
    "!src/**/entities/**",
    "!src/**/*.dto.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.decorator.ts",
    "!src/**/*.module.ts",
    "!src/**/scripts/**",
    "!node_modules/**"
  ],
  "coverageDirectory": "coverage-e2e",
  "coverageProvider": "v8",
  "coverageReporters": ["text", "text-summary", "lcov", "html", "json", "json-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 40,
      "functions": 40,
      "lines": 40,
      "statements": 40
    }
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/",
    "/coverage-e2e/",
    "\\.spec\\.ts$",
    "\\.e2e-spec\\.ts$",
    "\\.dto\\.ts$",
    "\\.interface\\.ts$",
    "\\.decorator\\.ts$",
    "\\.module\\.ts$",
    "/migrations/",
    "/entities/",
    "/config/",
    "/scripts/",
    "/test/",
    "main\\.ts$"
  ],
  "clearMocks": true,
  "restoreMocks": true,
  "resetMocks": true,
  "bail": false,
  "detectOpenHandles": true,
  "forceExit": false,
  "maxWorkers": "50%",
  "cache": true,
  "cacheDirectory": ".jest-e2e-cache",
  "errorOnDeprecated": true,
  "setupFilesAfterEnv": ["<rootDir>/test/jest-e2e.setup.ts"]
}
