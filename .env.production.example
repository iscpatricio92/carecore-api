# CareCore API - Production Environment Variables
# Copy this file to .env.production
# ⚠️ IMPORTANT: Fill all empty values with secure production values!
# Use .env.local for sensitive values that should not be in the repository

# Application
NODE_ENV=production
PORT=3000
APP_NAME=CareCore API

# Database
DB_TYPE=postgres
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SYNCHRONIZE=false

# Keycloak Configuration
# ⚠️ SECURITY: Fill with secure production values!
KEYCLOAK_ADMIN=
KEYCLOAK_ADMIN_PASSWORD=
KEYCLOAK_URL=
KEYCLOAK_REALM=carecore
KEYCLOAK_PORT=8080

# JWT
# ⚠️ SECURITY: Generate a strong random secret (minimum 32 characters)
JWT_SECRET=
JWT_EXPIRATION=24h

# FHIR
FHIR_VERSION=R4
FHIR_BASE_URL=

# Security
BCRYPT_ROUNDS=12

# CORS
# ⚠️ SECURITY: Use specific origins in production, never use '*'
CORS_ORIGIN=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# PgAdmin (Optional - disable in production if not needed)
PGADMIN_EMAIL=
PGADMIN_PASSWORD=
PGADMIN_PORT=
