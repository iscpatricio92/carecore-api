    "babel-jest": "^30.2.0",
    "babel-preset-expo": "~54.0.0",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.16",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
