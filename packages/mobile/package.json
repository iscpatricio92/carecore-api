{
  "name": "@carecore/mobile",
  "version": "0.1.0",
  "private": true,
  "main": "expo-router/entry",
  "description": "CareCore Mobile - Frontend React Native (placeholder)",
  "scripts": {
    "start": "expo start",
    "dev": "expo start --dev-client",
    "android": "expo run:android --device Pixel_5",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "bash -c 'source ~/.nvm/nvm.sh && nvm exec 18 jest --watchAll=false'",
    "test:watch": "bash -c 'source ~/.nvm/nvm.sh && nvm exec 18 jest --watchAll'",
    "test:debug": "bash -c 'source ~/.nvm/nvm.sh && nvm exec 18 jest --watchAll=false --detectOpenHandles'",
    "lint": "expo lint",
    "test:cov": "bash -c 'source ~/.nvm/nvm.sh && nvm exec 18 jest --coverage --config jest.config.js'"
  },
  "dependencies": {
    "@carecore/shared": "*",
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
