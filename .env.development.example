# CareCore API - Development Environment Variables
# Copy this file to .env.development and .env.local
# Edit .env.local with your actual values (this file should not be committed)

# Application
NODE_ENV=development
PORT=3000
APP_NAME=CareCore API

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SYNCHRONIZE=true

# Keycloak Configuration
KEYCLOAK_ADMIN=
KEYCLOAK_ADMIN_PASSWORD=
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=carecore
KEYCLOAK_PORT=8080

# JWT (for future use)
JWT_SECRET=
JWT_EXPIRATION=24h

# FHIR
FHIR_VERSION=R4
FHIR_BASE_URL=http://localhost:3000/api/fhir

# Security
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# PgAdmin (Optional)
PGADMIN_EMAIL=
PGADMIN_PASSWORD=
PGADMIN_PORT=5050
