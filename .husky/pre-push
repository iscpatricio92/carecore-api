#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validar formato de nombre de branch antes de hacer push
# Formato esperado: <tipo>(<scope>)/<iniciales>-#<numero>/<descripcion>
# Ejemplo: feat(api)/ps-#123/agregar-endpoint-pacientes

BRANCH_NAME=$(git symbolic-ref --short HEAD 2>/dev/null || echo "")

if [ -z "$BRANCH_NAME" ]; then
  echo "‚ö†Ô∏è  No se pudo determinar el nombre del branch actual"
  exit 0
fi

# Ignorar branches principales
if [ "$BRANCH_NAME" = "main" ] || [ "$BRANCH_NAME" = "master" ] || [ "$BRANCH_NAME" = "develop" ]; then
  exit 0
fi

# Patr√≥n de validaci√≥n
# Formato: <tipo>(<scope>)/<iniciales>-#<numero>/<descripcion>
# Ejemplos v√°lidos:
# - feat(api)/ps-#123/agregar-endpoint-pacientes
# - fix(web)/ps-#456/corregir-error-login
# - docs(root)/ps-#789/actualizar-readme

BRANCH_PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)\([a-z]+\)/[a-z]+-#[0-9]+/[a-z0-9-]+$"

if ! echo "$BRANCH_NAME" | grep -qE "$BRANCH_PATTERN"; then
  echo ""
  echo "‚ùå El nombre del branch no sigue la convenci√≥n requerida"
  echo ""
  echo "üìã Formato esperado:"
  echo "   <tipo>(<scope>)/<iniciales>-#<numero>/<descripcion>"
  echo ""
  echo "üìù Ejemplos v√°lidos:"
  echo "   feat(api)/ps-#123/agregar-endpoint-pacientes"
  echo "   fix(web)/ps-#456/corregir-error-login"
  echo "   docs(root)/ps-#789/actualizar-readme"
  echo "   build(infra)/ps-#101/actualizar-dockerfile"
  echo ""
  echo "üîç Tu branch actual: $BRANCH_NAME"
  echo ""
  echo "üí° Tipos permitidos: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo "üí° Scopes permitidos: api, web, mobile, shared, infra, keycloak, root"
  echo ""
  echo "Para renombrar el branch actual:"
  echo "   git branch -m <nuevo-nombre>"
  echo ""
  exit 1
fi

echo "‚úÖ Nombre de branch v√°lido: $BRANCH_NAME"

