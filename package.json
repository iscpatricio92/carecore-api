{
  "name": "carecore",
  "version": "0.2.0",
  "description": "CareCore - Digital Health Record Platform with FHIR (Monorepo)",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@carecore/api",
    "build:shared": "npm run build --workspace=@carecore/shared",
    "test": "echo 'select specific package to test: api, web, mobile. use npm run test:<package>'",
    "test:api": "npm run test --workspace=@carecore/api",
    "test:api:cov": "npm run test:cov --workspace=@carecore/api",
    "test:api:e2e": "npm run test:e2e --workspace=@carecore/api",
    "test:api:integration": "npm run test:integration --workspace=@carecore/api",
    "test:api:integration:cov": "npm run test:integration:cov --workspace=@carecore/api",
    "test:web": "npm run test --workspace=@carecore/web",
    "test:web:cov": "npm run test:cov --workspace=@carecore/web",
    "test:mobile": "npm run test --workspace=@carecore/mobile",
    "test:mobile:cov": "npm run test:cov --workspace=@carecore/mobile",
    "test:all": "npm run test:api && npm run test:api:e2e",
    "test:all:packages": "npm run test:api && npm run test:web && npm run test:mobile",
    "lint": "npm run lint --workspace=@carecore/api",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "commit": "cz",
    "prepare": "husky install",
    "test:changed": "bash scripts/run-tests-for-packages.sh"
  },
  "lint-staged": {
    "packages/api/**/*.{ts,js}": [
      "prettier --write",
      "bash -c 'npm run lint --workspace=@carecore/api -- --fix'"
    ],
    "packages/web/**/*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "bash -c 'npm run lint --workspace=@carecore/web -- --fix'"
    ],
    "packages/mobile/**/*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "bash -c 'npm run lint --workspace=@carecore/mobile -- --fix'"
    ],
    "packages/shared/**/*.{ts,js}": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.5.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
